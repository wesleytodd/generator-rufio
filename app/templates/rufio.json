{
  "title": "<%= input.title %>",
  "hostname": "<%= input.hostname %>",
  "author": "<%= input.author %>",
  <% if (input.tagline) { %>"tagline": "<%= input.tagline %>",<% } %>
  "titleFormat": "<%%= meta.title %> - <%%= global.title %> - <%%= global.tagline %>",
  "dateFormat": "MM-DD-YY",
  "types": {
    "page": {
      "directory": "content/page",
      "permalink": "/<%%= meta.slug %>.html",
      "filters": "template,markdown",
      "jsonPermalink": "/<%%= meta.slug %>.json"
    },
    "post": {
      "directory": "content/post",
      "permalink": "/<%%= meta.date.getFullYear() %>/<%%= meta.date.getMonth() + 1 %>/<%%= slug %>.html",
      "filters": "template,markdown",
      "jsonPermalink": "/<%%= meta.date.getFullYear() %>/<%%= meta.date.getMonth() + 1 %>/<%%= slug %>.json"
    }
  },
  "themes": {
    "directory": "themes",
    "active": "default"
  },
  "media": {
    "directory": "media"
  },
  "build": {
    "directory": "build",
    "active": "active"
  },
  "plugins": {
    "active": [
      "json"
    ]
  },
  "rufio": {
    "metaEnd": "--META--"
  }
}
