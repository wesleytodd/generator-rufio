{
	"title": "",
	"hostname": "",
	"tagline": "",
	"titleFormat": "<%= meta.title %> - <%= global.title %> - <%= global.tagline %>",
	"types": {
		"page": {
			"directory": "pages",
			"permalink": "/<%= slug %>.html",
			"filters": "template,markdown"
		},
		"post" : {
			"directory": "posts",
			"permalink": "/<%= meta.date.getFullYear() %>/<%= meta.date.getMonth() + 1 %>/<%= slug %>.html",
			"filters": "template,markdown"
		}
	},
	"themes": {
		"directory": "themes",
		"active": "default"
	},
	"build": {
		"directory": "build"
	},
	"rufio": {
		"metaEnd": "--META--"
	},
	"analytics": {
		"code": "UA-XXXXXXXX-1"
	}
}
