{
	"title": "<%= input.title %>",
	"hostname": "<%= input.url %>",
	"tagline": "<%= input.tagline %>",
	"titleFormat": "<%%= meta.title %> - <%%= global.title %> - <%%= global.tagline %>",
	"types": {
		"page": {
			"directory": "pages",
			"permalink": "/<%%= slug %>.html",
			"filters": "template,markdown"
		},
		"post" : {
			"directory": "posts",
			"permalink": "/<%%= meta.date.getFullYear() %>/<%%= meta.date.getMonth() + 1 %>/<%%= slug %>.html",
			"filters": "template,markdown"
		}
	},
	"themes": {
		"directory": "themes",
		"active": "default"
	},
	"media": {
		"directory": "media" 
	},
	"plugins": {
		"directory": "",
		"active": []
	},
	"build": {
		"directory": "build"
	},
	"rufio": {
		"metaEnd": "--META--"
	},
	"analytics": {
		"code": "UA-XXXXXXXX-1"
	}
}
